{% extends "_base.twig" %}

{% block baseStyles %}
	<link rel="stylesheet" href="./styles/layout-group.css">
	<link rel="stylesheet" href="./styles/material.css">
	<style>
		.button:hover {
			background-color: #622162 !important;
			box-shadow: 0px 2px 4px -1px rgba(0, 0, 0, 0.2),
			0px 4px 5px 0px rgba(0, 0, 0, 0.14), 0px 1px 10px 0px rgba(0, 0, 0, 0.12) !important;
		}
	</style>
	{% block styles %}{% endblock %}
{% endblock %}

{% block baseHeader %}
	<div id="email-header">
		<b>{{groupName}}</b>
	</div>
{% endblock %}

{% block baseContent %}
	{% block content %}{% endblock %}
	<div id="email-group">
		<a class="button" href={{ "#{host}/group/#{groupId}" }} target="_blank" rel="noreferrer noopener notrack">
			<span class="button-label">
				{{groupName}}
			</span>
		</a>
	</div>
{% endblock %}


{% block baseFooter %}
	<img src={{ "#{host}/theme/#{theme.id}/logo3.png" }} alt={{"logo #{theme.name}"}} style="margin-bottom: 16px; max-width: 200px;"/>
	{% block footer %}{% endblock %}
	<p>Ce courriel a été envoyé depuis <a href={{ "#{host}" }} target="_blank" rel="noreferrer noopener notrack">{{theme.name}}</a>.</p>
	<p>Vous recevez ce message car vous faites partie de <b>{{ groupName }}</b> {% if list!=null %} ({{ list }}) {% endif %}</p>
	<p><a href={{ "#{quitGroupLink}" }} rel="notrack">Quittez ce groupe</a> si vous ne souhaitez plus recevoir de messages</p>
{% endblock %}
