{
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "node"
    ],
  },
  "include": [
    "src",
    "test",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tmp",
    "scripts"
  ]
}